@model IEnumerable<BjornsRadioExcelExport.Models.Album>

@{
    ViewData["Title"] = "Albums";
}
<div class="float-end">
    <a asp-action="ExportToExcel" class="btn btn-primary" target="_blank">Export to Excel</a>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</div>

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.GenreNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaNavigation)
            </th>
            <th>
                Songs
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.GenreNavigation.GenreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MediaNavigation.TypeName)
                </td>
                <td>
                    @* @Html.DisplayFor(modelItem => item.Songs) *@
                    @Html.DisplayFor(modelItem => item.SongsCsv)
                    @* @Html.DisplayFor(modelItem => item.Songs.Aggregate("", (curr, song) => curr + ", " + song.Title)) *@
                    @* @Model.Songs.Aggregate("Songs", (curr, next) => curr + ", " + next.Title) *@
                </td>
                <td style="width: 120px">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Details"><i class="bi bi-info-circle"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit"><i class="bi bi-pen"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
