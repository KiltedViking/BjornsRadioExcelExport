@model BjornsRadioExcelExport.Models.Album

@{
    ViewData["Title"] = "Album details";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artist)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReleaseYear)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comments)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comments)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GenreNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GenreNavigation.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MediaNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MediaNavigation.Id)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>

    <div class="col-md-6">
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order</th>
                    <th>Title</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model.Songs)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItme => song.AlbumOrder)</td>
                        <td>@Html.DisplayFor(modelItme => song.Title)</td>
                        <td><a asp-action="Details" asp-controller="Songs" asp-route-id="@song.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i>
                        </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

